###############################################################################
# Custom Environment variables
#
# Add the following to .bashrc:
#
# if [ -f ~/.bash_env ]; then
#     source ~/.bash_env
# fi
###############################################################################

# Set the default editor
#export EDITOR='nano'
export EDITOR='vim'
#export EDITOR=/opt/sublime_text/sublime_text -w -n
#export EDITOR='subl -w -n'
#export EDITOR='subl -w'

export VISUAL=$EDITOR

#######################################################
# Paths
#
# add_to_path() function is defined in .bash_aliases
#######################################################

printf "Setting common environment variables... "

INSTALL_DIR='/opt'
add_to_path "$INSTALL_DIR/apache-activemq-5.15.8/bin"
add_to_path "$HOME/scripts"

printf "Done\n"

# Host specific variables
printf "Setting environment variables for %s... " "$(hostname)"

case $(hostname -s) in
	mint-dev) 
		export JAVA_HOME="$INSTALL_DIR/java/current"
		add_to_path "$INSTALL_DIR/fuse-7.2.0/bin"
		add_to_path "$INSTALL_DIR/apache-maven-3.6.0/bin"
		export MAVEN_OPTS="-Xms256m -Xmx1024m -XX:MaxPermSize=256M"
		;;
	suse-server) 
		IIB_DIR='/iib-10.0.0.7'
		# Source the mqsiprofile to set up env variables to run IIB mqsi* commands
		. mqsiprofile
		add_to_path "$INSTALL_DIR$IIB_DIR"
		add_to_path "$INSTALL_DIR$IIB_DIR/server/bin"
		add_to_path "$INSTALL_DIR$IIB_DIR/server/lib"
		ODBC_VAR_DIR="$INSTALL_DIR$IIB_DIR/ie02/etc"
		export ODBCINI="$ODBC_VAR_DIR/odbc.ini"
		export ODBCSYSINI="$ODBC_VAR_DIR"
		;;
esac

printf "Done\n"

########################################## 
# History config
##########################################

export HISTTIMEFORMAT="%d/%m/%y %T "

# Avoid succesive duplicates in the bash command history.
export HISTCONTROL=ignoredups

# Append commands to the bash command history file (~/.bash_history)
# instead of overwriting it.
shopt -s histappend histverify

# Append commands to the history every time a prompt is shown,
# instead of after closing the session.
PROMPT_COMMAND='history -a'

export HISTCONTROL='erasedups:ignoreboth'

# Don't save trivial one and two character commands on the history list
#export HISTIGNORE=?:??

# extend history
export HISTFILESIZE=99999
export HISTSIZE=99999

##########################################
# Seafly Prompt config
##########################################

#seafly prompt, see: https://github.com/bluz71/bash-seafly-prompt
export SEAFLY_SHOW_USER=0
#export SEAFLY_PROMPT_SYMBOL=">"
#export SEAFLY_PS2_PROMPT_SYMBOL=">"
#export SEAFLY_GIT_PREFIX="("
#export SEAFLY_GIT_SUFFIX=")"
#export SEAFLY_GIT_DIRTY="*"
#export SEAFLY_GIT_STASH="$"
#export SEAFLY_GIT_AHEAD=">"
#export SEAFLY_GIT_BEHIND="<"
#export SEAFLY_GIT_DIVERGED="<>"
export SEAFLY_NORMAL_COLOR="$(tput bold; tput setaf 63)"
export SEAFLY_ALERT_COLOR="$(tput bold; tput setaf 202)"
export SEAFLY_HOST_COLOR="$(tput bold; tput setaf 242)"
#export SEAFLY_GIT_COLOR="$(tput bold; tput setaf 99)"
export SEAFLY_GIT_COLOR="$(tput bold; tput setaf 4)"
#export SEAFLY_PATH_COLOR="$(tput bold; tput setaf 70)"
export SEAFLY_PATH_COLOR="$(tput bold; tput setaf 3)"
export PROMPT_DIRTRIM=1
export GIT_PS1_SHOWDIRTYSTATE=1
