###############################################################################
# Custom Environment variables
#
# Add the following to .bashrc:
#
# if [ -f ~/.bash_env ]; then
#     source ~/.bash_env
# fi
###############################################################################

# Set the default editor
export EDITOR=nano
export VISUAL='nano'
#export EDITOR=/opt/sublime_text/sublime_text -w -n
#export EDITOR='subl -w -n'
#export EDITOR='subl -w'
#export VISUAL=$EDITOR

#######################################################
# Paths
#
# uses add_to_path() function defined in .bash_aliases
#######################################################

add_to_path "/home/otto/scripts"

add_to_path "/opt/apache-maven-3.6.0/bin"

add_to_path "/opt/fuse-7.2.0/bin"

INSTALL_DIR='opt'
JAVA_DIR='java/current'
JAVA_DIR="/$INSTALL_DIR/$JAVA_DIR"
export JAVA_HOME=$JAVA_DIR

########################################## 
# History config...
##########################################

export HISTTIMEFORMAT="%d/%m/%y %T "

# Avoid succesive duplicates in the bash command history.
export HISTCONTROL=ignoredups

# Append commands to the bash command history file (~/.bash_history)
# instead of overwriting it.
shopt -s histappend histverify

# Append commands to the history every time a prompt is shown,
# instead of after closing the session.
PROMPT_COMMAND='history -a'

export HISTCONTROL='erasedups:ignoreboth'

# Don't save trivial one and two character commands on the history list
export HISTIGNORE=?:??

# extend history
export HISTFILESIZE=99999
export HISTSIZE=99999







